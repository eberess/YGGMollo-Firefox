{
  "manifest_version": 3,
  "name": "YGGMollo",
  "version": "1.0.0",
  "description": "Ajoute un bouton télécharger via YGG-API sur les pages YGGTorrent",
  "author": "AB",
  "homepage_url": "https://github.com/eberess/YGGMollo-Firefox",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.yggtorrent.org/torrent/*",
        "*://*.yggtorrent.com/torrent/*",
        "*://*.yggtorrent.si/torrent/*",
        "*://*.yggtorrent.re/torrent/*",
        "*://*.yggtorrent.li/torrent/*",
        "*://*.yggtorrent.gg/torrent/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*.webp"],
      "matches": [
        "*://*.yggtorrent.org/*",
        "*://*.yggtorrent.com/*",
        "*://*.yggtorrent.si/*",
        "*://*.yggtorrent.re/*",
        "*://*.yggtorrent.li/*",
        "*://*.yggtorrent.gg/*"
      ]
    }
  ],
  "permissions": [
    "storage",
    "downloads"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "ab@wilmoredynamics.com",
      "strict_min_version": "109.0"
    }
  }
}
